<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryDark"
    tools:context=".view.fragment.education.home.practice.HomePracticeFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_practice_main_constraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/home_practice_cardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="?attr/colorOnBackground"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/home_practice_content_constraint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/home_practice_menu_constraint"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:elevation="9dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/home_practice_menu_in_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="60dp"
                        android:elevation="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:visibility="visible">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/home_practice_menu_card"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="24dp"
                            android:layout_marginBottom="24dp"
                            app:cardBackgroundColor="?attr/colorPrimarySurface"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:visibility="visible">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/home_practice_menu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:elevation="21dp">

                                <Button
                                    android:id="@+id/bt_home_practice_menu_signup_to_practice"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:background="@drawable/ic_menu_button"
                                    android:fontFamily="@font/ubuntu_r"
                                    android:letterSpacing="0.03"
                                    android:text="@string/signup_to_practice"
                                    android:textAllCaps="false"
                                    android:textColor="?attr/colorOnSecondary"
                                    android:textIsSelectable="false"
                                    android:textSize="16sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <FrameLayout
                                    android:id="@+id/frameLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:alpha="0.2"
                                    android:background="?attr/colorOnSecondary"
                                    app:layout_constraintTop_toBottomOf="@+id/bt_home_practice_menu_signup_to_practice">

                                </FrameLayout>

                                <Button
                                    android:id="@+id/bt_home_practice_menu_learn_cancel"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:autoSizeTextType="none"
                                    android:background="@drawable/ic_menu_button"
                                    android:fontFamily="@font/ubuntu_r"
                                    android:letterSpacing="0.03"
                                    android:text="@string/learn_cancel"
                                    android:textAllCaps="false"
                                    android:textColor="?attr/colorOnSecondary"
                                    android:textIsSelectable="false"
                                    android:textSize="16sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

                                <FrameLayout
                                    android:id="@+id/frameLayout2"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:alpha="0.2"
                                    android:background="?attr/colorOnSecondary"
                                    app:layout_constraintTop_toBottomOf="@+id/bt_home_practice_menu_learn_cancel">

                                </FrameLayout>

                                <Button
                                    android:id="@+id/bt_home_practice_menu_lessons_history"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:autoSizeTextType="none"
                                    android:background="@drawable/ic_menu_button"
                                    android:fontFamily="@font/ubuntu_r"
                                    android:letterSpacing="0.03"
                                    android:text="@string/lessons_history"
                                    android:textAllCaps="false"
                                    android:textColor="?attr/colorOnSecondary"
                                    android:textIsSelectable="false"
                                    android:textSize="16sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/frameLayout2" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/education_more_triangle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="10dp"
                            android:src="@drawable/ic_triangle_down"
                            app:layout_constraintEnd_toEndOf="@+id/home_practice_menu_card"
                            app:layout_constraintStart_toStartOf="@+id/home_practice_menu_card"
                            app:layout_constraintTop_toBottomOf="@+id/home_practice_menu_card" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.33" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.66" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/home_practice_instructor_avatar"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="12dp"
                        app:layout_constraintEnd_toStartOf="@+id/guideline7"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@tools:sample/avatars" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/bt_home_practice_call_instructor"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/ic_circle_blue_button"
                        android:elevation="8dp"
                        android:src="@drawable/ic_call_white"
                        app:layout_constraintEnd_toStartOf="@+id/guideline8"
                        app:layout_constraintStart_toStartOf="@+id/guideline7"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/bt_home_practice_change_instructor"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/ic_circle_blue_button"
                        android:elevation="8dp"
                        android:src="@drawable/ic_info_circle_white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline8"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageView6"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_baseline_star_24"
                        app:layout_constraintStart_toStartOf="@+id/home_practice_instructor_avatar"
                        app:layout_constraintTop_toBottomOf="@+id/home_practice_instructor_avatar" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/home_practice_instructor_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/ubuntu_r"
                        android:text="4,5"
                        android:textColor="@color/gray_text"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
                        app:layout_constraintEnd_toEndOf="@+id/home_practice_instructor_avatar"
                        app:layout_constraintStart_toEndOf="@+id/imageView6"
                        app:layout_constraintTop_toTopOf="@+id/imageView6" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/home_practice_call_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_r"
                        android:text="@string/call_instructor"
                        android:textAlignment="center"
                        android:textColor="@color/gray_text"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/home_practice_instructor_rate"
                        app:layout_constraintEnd_toEndOf="@+id/bt_home_practice_call_instructor"
                        app:layout_constraintStart_toStartOf="@+id/bt_home_practice_call_instructor" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/home_practice_change_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_r"
                        android:text="@string/change_instructor"
                        android:textAlignment="center"
                        android:textColor="@color/gray_text"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/home_practice_instructor_rate"
                        app:layout_constraintEnd_toEndOf="@+id/bt_home_practice_change_instructor"
                        app:layout_constraintStart_toStartOf="@+id/bt_home_practice_change_instructor" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout22"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="24dp"
                        android:alpha="0.2"
                        android:background="?attr/colorOnSecondary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/home_practice_call_title">

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/home_practice_instructor_name_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/ubuntu_r"
                        android:text="@string/instructor"
                        android:textColor="@color/gray_text"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toTopOf="@+id/home_practice_instructor_name"
                        app:layout_constraintStart_toStartOf="@+id/constraintLayout22"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout22" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/home_practice_instructor_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="24dp"
                        android:fontFamily="@font/ubuntu_r"
                        android:textAlignment="viewStart"
                        android:textColor="?attr/colorOnSecondary"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toTopOf="@+id/home_practice_instructor_car_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/home_practice_instructor_name_title"
                        app:layout_constraintTop_toBottomOf="@+id/home_practice_instructor_name_title" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/home_practice_instructor_car_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/ubuntu_r"
                        android:text="@string/car"
                        android:textColor="@color/gray_text"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toTopOf="@+id/home_practice_instructor_car"
                        app:layout_constraintStart_toStartOf="@+id/home_practice_instructor_name"
                        app:layout_constraintTop_toBottomOf="@+id/home_practice_instructor_name" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/home_practice_instructor_car"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="24dp"
                        android:layout_marginBottom="32dp"
                        android:fontFamily="@font/ubuntu_r"
                        android:textAlignment="viewStart"
                        android:textColor="?attr/colorOnSecondary"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toTopOf="@+id/bt_home_practice_menu"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/home_practice_instructor_car_title"
                        app:layout_constraintTop_toBottomOf="@+id/home_practice_instructor_car_title" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt_home_practice_menu"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="24dp"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/ic_main_button"
                        android:elevation="2dp"
                        android:fontFamily="@font/ubuntu_m"
                        android:shadowDx="@integer/material_motion_duration_short_1"
                        android:shadowDy="@integer/material_motion_duration_short_1"
                        android:singleLine="true"
                        android:text="@string/menu"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/home_practice_instructor_car" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>