<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.registration.smscode.SmsCodeFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sms_code_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/ubuntu_m"
        android:text="@string/sms_code_title"
        android:textAlignment="center"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sms_code_1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textColorHint="@color/hint"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="1dp"
        app:endIconMode="none"
        app:errorIconDrawable="@null"
        app:layout_constraintBottom_toTopOf="@+id/bt_sms_code_retry"
        app:layout_constraintEnd_toStartOf="@+id/sms_code_2"
        app:layout_constraintTop_toBottomOf="@+id/sms_code_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/sms_code_1_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:cursorVisible="false"
            android:digits="0123456789"
            android:fontFamily="@font/ubuntu_m"
            android:inputType="numberPassword|phone"
            android:maxLength="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="28sp"
            tools:ignore="SpeakableTextPresentCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sms_code_2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColorHint="@color/hint"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="1dp"
        app:endIconMode="none"
        app:errorIconDrawable="@null"
        app:layout_constraintBottom_toTopOf="@+id/bt_sms_code_retry"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/sms_code_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/sms_code_2_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:cursorVisible="false"
            android:digits="0123456789"
            android:fontFamily="@font/ubuntu_m"
            android:inputType="numberPassword|phone"
            android:maxLength="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="28sp"
            tools:ignore="SpeakableTextPresentCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sms_code_3"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColorHint="@color/hint"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="1dp"
        app:endIconMode="none"
        app:errorIconDrawable="@null"
        app:layout_constraintBottom_toTopOf="@+id/bt_sms_code_retry"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/sms_code_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/sms_code_3_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:cursorVisible="false"
            android:digits="0123456789"
            android:fontFamily="@font/ubuntu_m"
            android:inputType="numberPassword|phone"
            android:maxLength="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="28sp"
            tools:ignore="SpeakableTextPresentCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sms_code_4"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColorHint="@color/hint"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="1dp"
        app:endIconMode="none"
        app:errorIconDrawable="@null"
        app:layout_constraintBottom_toTopOf="@+id/bt_sms_code_retry"
        app:layout_constraintStart_toEndOf="@+id/sms_code_3"
        app:layout_constraintTop_toBottomOf="@+id/sms_code_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/sms_code_4_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:cursorVisible="false"
            android:digits="0123456789"
            android:fontFamily="@font/ubuntu_m"
            android:inputType="numberPassword|phone"
            android:maxLength="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="28sp"
            tools:ignore="SpeakableTextPresentCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/invalid_code_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/ubuntu_m"
        android:text="@string/invalid_code"
        android:textColor="@color/red_alert"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sms_code_2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_sms_code_retry"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/ic_transparent_button"
        android:fontFamily="@font/ubuntu_m"
        android:text="@string/retry_call"
        android:textAllCaps="false"
        android:textColor="@color/main"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>