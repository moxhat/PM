<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PravaMobil" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorOnBackground">@color/background_dark</item>
        <item name="colorBackgroundFloating">@color/background_dark</item>
        <item name="colorOnPrimarySurface">@color/dark_text</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="colorControlNormal">@color/transparent</item>
    </style>

    <style name="SeekThemeTwo" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/main</item>
        <item name="android:colorControlNormal">@color/white</item>
    </style>

</resources>