<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PravaMobil" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/dark_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorOnBackground">@color/white</item>
        <item name="colorBackgroundFloating">@color/help_gray</item>
        <item name="colorOnPrimarySurface">@color/light_gray</item>
        <item name="colorPrimaryDark">#F9F9F9</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="colorControlNormal">@color/transparent</item>
    </style>

    <style name="SeekThemeTwo" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/main</item>
        <item name="android:colorControlNormal">@color/white</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextActivate</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextInactivate</item>
    </style>

    <style name="BottomNavigationTextActivate">
        <item name="fontFamily">@font/ubuntu_m</item>
        <item name="android:textSize">12sp</item>
        <item name="rippleColor">@color/main_05</item>
    </style>

    <style name="BottomNavigationTextInactivate" parent="BottomNavigationTextActivate">
        <item name="android:iconTint">@color/gray_text</item>
        <item name="android:textColor">@color/gray_text</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/ubuntu_m</item>
        <item name="android:textSize">14sp</item>
        <item name="rippleColor">@color/main_05</item>
    </style>

</resources>